<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5873A1"
    android:gravity="center|top"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/appTitle"
        style="@style/marginAndPadding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_title"
        android:textSize="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/inputTxt"
        style="@style/marginAndPadding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/inputHint"></EditText>

    <Switch
        android:id="@+id/doneSwitch"
        style="@style/marginAndPadding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="@string/switchTxt"></Switch>

    <Button
        android:id="@+id/addBtn"
        style="@style/marginAndPadding"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@string/btnTxt">

    </Button>

    <Spinner
        android:id="@+id/todoTasks"
        style="@style/marginAndPadding"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:entries="@array/spinnerValues"></Spinner>

    <TextView
        android:id="@+id/feedbackTxt"
        style="@style/marginAndPadding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </TextView>

</androidx.appcompat.widget.LinearLayoutCompat>